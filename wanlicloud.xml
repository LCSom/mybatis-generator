<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <classPathEntry location="mysql-connector-java-5.1.34.jar"/>

    <context id="DB2Tables" targetRuntime="MyBatis3">

        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://linkdood.ddns.net:3306/ecg_product_db" userId="root" password="L1nkd00d">
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="com.linkdoodtechnologies.ecgproduct.ecgproduct.bean" targetProject="./src">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="com.linkdoodtechnologies.ecgproduct.ecgproduct.mapper" targetProject="./src">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.linkdoodtechnologies.ecgproduct.ecgproduct.mapper" targetProject="./src">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>
        <table tableName="variation_tbl" domainObjectName="CategoryBean">

            <property name="enableSelectByExample" value="true"/>
            <property name="enableDeleteByExample" value="true"/>
            <property name="enableCountByExample" value="true"/>
            <property name="enableUpdateByExample" value="true"/>
            <property name="enableUpdateByPrimaryKey" value="true"/>

<!--            auto increament id put here, so wont add in as empty-->
            <generatedKey column="vt_id" sqlStatement="MySql"
                          identity="true"/>

<!--            ignore write at here-->
            <ignoreColumn column="vt_created_datetime" />
            <ignoreColumn column="vt_updated_datetime" />
        </table>
    </context>
</generatorConfiguration>